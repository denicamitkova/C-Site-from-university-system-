@model Kursova.ViewModels.Students.IndexVM
@using Kursova.Entities;
@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Students Management View</h1>
<div class="form-group">
    <a href="/Students/Create"><input type="button" class="btn btn-primary" value="Create New Student" /></a>
</div>

<div class="grid">
    <div class="row">
        <div class="col-2">First Name</div>
        <div class="col-2">Last Name</div>
        <div class="col-2">Enrollment</div>
    </div>
    <hr />
    <div class="col-sm">
        @foreach (Student item in Model.Items)
        {
            <div class="row">
                <div class="col-2">@item.FirstName</div>
                <div class="col-2">@item.LastName</div>
                <div class="col-3">@item.Enrollment</div>
                <div class="col-2">
                    <a href="/Students/Edit?id=@item.Id">Edit</a>
                    <span>|</span>
                    <a href="/Students/Delete?id=@item.Id">Delete</a>
                </div>
            </div><hr />
        }
    </div>
</div>

